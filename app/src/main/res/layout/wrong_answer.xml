<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="#F6D5D3">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#872922"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/amaranth_bold"
            android:gravity="center"
            android:text="Incorrect"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/inCorrectAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:fontFamily="@font/amaranth_bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        card_view:layout_constraintBottom_toTopOf="@+id/wrongOk"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/wrongOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#872922"
        android:fontFamily="@font/amaranth_bold"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="20sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/inCorrectAns"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>